<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/sender_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Sender"
            android:textSize="16sp"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="10dp"
            android:paddingBottom="6dp"
            android:textColor="@android:color/black" android:textStyle="bold"/>

        <TextView
            android:id="@+id/date_text"
            android:layout_alignParentRight="true"
            android:textColor="@color/TeamChiefBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="2dp"
            android:paddingBottom="6dp"
            android:textSize="12sp"
            android:text="Jan 2, 2014"
            android:layout_alignBottom="@+id/sender_text"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sender_text"
            android:layout_alignParentLeft="true"
            android:padding="12dp"
            android:background="@drawable/grey_bubble"
            >

            <TextView
                android:id="@+id/message_text"
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:text="Hello"
                />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>